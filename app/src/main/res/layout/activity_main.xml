<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titulo_calculo_imc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_calculo_imc"
        android:textSize="80px"/>

    <TextView
        android:id="@+id/peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_peso" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idPeso"
        android:inputType="numberDecimal">

    </EditText>
    <TextView
        android:id="@+id/altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_altura" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idAltura"
        android:inputType="numberDecimal">

    </EditText>
    <Button
            android:id="@+id/idBtnCalcularImc"
        android:layout_height="wrap_content"
        android:text="@string/btn_calcular_imc"
        android:layout_width="match_parent"
        android:onClick="calculaIMC"/>

    <ImageView
        android:id="@+id/imgIMC"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:src="@drawable/perfil"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60px"
        android:text="Descubra seu IMC"
        android:gravity="center_vertical"
        android:id="@+id/txtIMC"></TextView>
</LinearLayout>